<!DOCTYPE html>
<html>
<head>
  <title>Timesheet</title>
  <%= include_gon %>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  <%= csrf_meta_tags %>
</head>
<body class="<%= body_class %>">
  <div class="main">
    <header class="main-header">
      <div class="wrapper">
        <div class="main-header-top">
          <div class="logo">
            <%= image_tag "logo.png"%>
            <span>ShiftKeeper</span>
          </div> 
        </div>
        <a class="login" href="">Sign In <i class="fa fa-arrow-left"></i></a>
      </div>
      <nav class="navbar navbar-inverse" role="navigation">
        <div class="wrapper">
          <ul class="nav navbar-nav">
            <li class="active dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Shifts<span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'Today', filtered_shifts_path('daily', Date.today, Date.today) %></li>
                <li class="divider"></li>
                <li><%= link_to 'This Week', filtered_shifts_path('weekly', Date.today.beginning_of_week, Date.today.end_of_week) %></li>
                <li><%= link_to 'Last Week', filtered_shifts_path('weekly', beginning_of_last_week, end_of_last_week) %></li>
                <li><%= link_to 'Last Two Weeks', filtered_shifts_path('bi-weekly', beginning_of_last_week, Date.today.end_of_week) %></li>
                <li class="divider"></li>
                <li><%= link_to 'This Month', filtered_shifts_path('monthly', Date.today.at_beginning_of_month, Date.today.at_end_of_month) %></li>
                <li><%= link_to 'Last Month', filtered_shifts_path('monthly', beginning_of_last_month, end_of_last_month) %></li>
              </ul>
            </li>
            <li><%= link_to 'Projects & Tasks', projects_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Reports<span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'This Week', filtered_shifts_path('weekly', Date.beginning_of_week, Date.today) %></li>
                <li><%= link_to 'Last Week', filtered_shifts_path('weekly', beginning_of_last_week, end_of_last_week) %></li>
                <li><%= link_to 'Last Two Weeks', filtered_shifts_path('bi-weekly', beginning_of_last_week, Date.today) %></li>
                <li class="divider"></li>
                <li><%= link_to 'This Month', filtered_shifts_path('monthly', Date.today.at_beginning_of_month, Date.today.at_end_of_month) %></li>
                <li class="divider"></li>
                <li><%= link_to 'Custom', filtered_shifts_path('monthly', Date.today.at_beginning_of_month, Date.today.at_end_of_month) %></li>
              </ul>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= @current_user.name if @current_user%><span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><a href="#">Logout</a></li>
                <li><a href="#">Another action</a></li>
                <li><a href="#">Something else here</a></li>
                <li class="divider"></li>
                <li><a href="#">Separated link</a></li>
                <li class="divider"></li>
                <li><a href="#">One more separated link</a></li>
              </ul>
            </li>
          </ul>
        </div>
      </nav>
    </header>
    <div class="body">
      <div class="wrapper">
        <%= yield %>
      </div>
    </div>
  </div>
</body>
</html>
