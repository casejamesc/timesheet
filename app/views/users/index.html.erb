<h1>Admin: Users</h1>

<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<table class="users-table table table-striped table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Username</th>
      <th>Email</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class="edit"><%= link_to image_tag("icon-edit.png"), edit_user_path(user) %></td>
        <td class="username"><%= user.username %></td>
        <td class="email"><%= user.email %></td>
        <td class="first_name"><%= user.first_name %></td>
        <td class="last_name"><%= user.last_name %></td>
        <td class="action"><%= link_to image_tag("icon-delete.png"), user, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: 'btn btn-success' %>
